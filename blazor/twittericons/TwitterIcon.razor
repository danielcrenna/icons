@inherits Icon
<DynamicComponent Type="@_iconType" Parameters="@AdditionalAttributes" />

@code
{
    [Parameter] public IconType Type { get; set; } = IconFactory.DefaultIconType;
    [Parameter] public IconStyle Style { get; set; } = IconStyle.Outline;

    private Type? _iconType;

    protected override Task OnParametersSetAsync()
    {
        _iconType = IconFactory.GetIconType(Type, Style);
        return Task.CompletedTask;
    }
}
